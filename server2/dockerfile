# Use Node.js official image
FROM node:24

# Set working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json first (for caching)
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of your backend code
COPY . .

# Expose the port your server listens on
EXPOSE 3000

# Start the server
CMD ["node", "server.js"]

